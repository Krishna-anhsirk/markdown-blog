<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control mb-3"
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control mb-3">
<%= article.description %></textarea
  >
  <div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control mb-3">
<%= article.markdown %></textarea
    >
  </div>
  <a href="/" class="mt-4 btn btn-secondary">Cancel</a>
  <button type="submit" class="mt-4 btn btn-primary">Save</button>
</div>
